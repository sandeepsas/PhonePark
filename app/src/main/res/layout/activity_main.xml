<!-- Layout file for ActivityDetectionSampleActivity -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textview_park"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:textColor="@color/white"
            android:text=""
            android:visibility="visible"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/textview1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#aa000000"
            android:textColor="@color/white"
            android:text=""
            android:visibility="visible"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/environment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="28px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/state"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="28px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/google_state"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="28px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/console_text_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="100"
            android:text=""
            android:scrollbars="vertical" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <fragment
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.google.android.gms.maps.MapFragment" />
        <ImageButton
            android:id="@+id/Park"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/parkingsearch"
            android:background="@android:color/transparent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <ImageButton
            android:id="@+id/PDP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/less"
            android:background="@android:color/transparent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:visibility="invisible"
            android:layout_alignTop="@+id/Park" />
    </RelativeLayout>

</LinearLayout>
