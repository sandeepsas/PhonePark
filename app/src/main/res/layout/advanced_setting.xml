            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/peformance_cancel_button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel" >
                </Button>

                <Button
                    android:id="@+id/performance_apply_button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/apply" >
                </Button>
            </TableRow>
        </TableLayout>
