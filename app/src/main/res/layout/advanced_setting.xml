            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/log_error_switch"
                    android:textSize="25sp" >
                </TextView>

                <ToggleButton
                    android:id="@+id/log_error_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right" >
                </ToggleButton>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/log_accl_raw_switch"
                    android:textSize="25sp" >
                </TextView>

                <ToggleButton
                    android:id="@+id/log_raw_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right" >
                </ToggleButton>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/log_report_switch"
                    android:textSize="25sp" >
                </TextView>

                <ToggleButton
                    android:id="@+id/log_report_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right" >
                </ToggleButton>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/log_accl_features_switch"
                    android:textSize="25sp" >
                </TextView>

                <ToggleButton
                    android:id="@+id/log_accl_features_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right" >
                </ToggleButton>
            </TableRow>

